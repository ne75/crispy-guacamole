package main;

/**
 * Program 213d (Weather Forecasting)
 * Nikita Ermoshkin
 * 11-13-12
 * JDK 7, Mac OS 10.8
 * 
 * This program figures out the current temperature in both
 * ¼F and ¼C and prints 
 * 
 */

import java.util.*;

public class WeatherForecasting {
    public static void main(String[] args) {
	
	Scanner s = new Scanner(System.in);
	int chirps = 0;
	int tempF = 0, tempC = 0;
	String condition = "";
	boolean end = false;
	
	do {
	    System.out.print("Enter number of chirps/min: ");
	    chirps = s.nextInt();
	    
	    tempF = (chirps + 40)/4;
	    System.out.print("Fahrenheit: " + tempF);
	    
	    tempC = ((tempF - 32) * 5)/9;
	    System.out.print("Celcius : " + tempC);
	    
	    
	    if (tempF >= 109){
		condition = "Dead cricket";
	    } else if (tempF >= 81 && tempF < 109){
		condition = "Whew";
	    } else if (tempF >= 65 && tempF < 82){
		condition = "Ahhhh";
	    } else if (tempF >= 45 && tempF < 65){
		condition = "Dead cricket";
	    } else {
		condition = "Dead cricket";
	    }
	    
	} while (end == false);
	
    }

}