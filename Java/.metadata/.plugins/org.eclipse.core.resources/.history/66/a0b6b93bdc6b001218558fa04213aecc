package main;

import java.util.*;

public class Polynomial {
    
    private int[] a;
    private int degree;
    
    public int[] Polynomial(String str){
	
	int[] a;
	
	Scanner s = new Scanner(str);
	int expIndex = str.indexOf('^');
	if (expIndex != -1){
	    degree = (int)(str.charAt(expIndex + 1)) - 48; 
	    a = new int[degree + 1];
	} else {
	    degree = 0;
	}
	
	return a;
    }
    
}
