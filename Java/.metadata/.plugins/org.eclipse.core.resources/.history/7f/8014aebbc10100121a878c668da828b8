 * JDK 7, Mac OS 10.8
 * 
 * This program takes an input radius in the form of an int, and prints
 * the radius, area, and circumference of the circle
 * 
 */

import java.util.*;

public class Cirlces {
	public static void main(String[] args){
		Scanner scanner = new Scanner(System.in);						//new Scanner object called scanner
		int r = scanner.nextInt();										//variable to store input radius
		double area = (r ^ 2) * Math.PI; 								//variable to store the area
		double circumference = 2 * r * Math.PI;							//variable to sore the circumference
		
		System.out.println("Radius of the circle = " + r);
		System.out.println("Area of the circle = " + area);
		System.out.println("Circumference of the circle = " + circumference);
	}

}
